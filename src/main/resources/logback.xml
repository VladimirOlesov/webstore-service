<configuration>

  <appender name="console_info" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %highlight(%d{HH:mm:ss.SSS}) [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="console_info"/>
  </root>

  <logger name="com.example.webstoreservice.service" level="info"/>

</configuration>